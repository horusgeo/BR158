<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_info_prop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="horusgeo.br158.infoPropActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bar"
            android:id="@+id/imageView24"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:text="Roteiro de Acesso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView84"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView24" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bar"
            android:id="@+id/imageView25"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView84"
            android:layout_width="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:text="Zoneamento:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView85"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView25"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            />

        <Spinner
            android:id="@+id/spinnerZoneamento"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toRightOf="@+id/textView85"
            android:layout_marginLeft="24dp"
            android:layout_width="0dp"
            android:layout_height="38dp"
            app:layout_constraintTop_toTopOf="@+id/textView85"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:entries="@array/zoneamento"
            />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
